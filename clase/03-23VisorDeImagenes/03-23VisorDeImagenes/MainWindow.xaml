            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Crimson" Offset="0"/>
                    <GradientStop Color="Black" Offset="0.713"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Button x:Name="btnAnterior" Content="7" Height="50" VerticalAlignment="Bottom" Width="75" FontFamily="Webdings" Margin="146,0,296,20" Background="Crimson" Click="btnAnterior_Click"/>
            <Button x:Name="btnSiguiente" Content="8" Height="50" VerticalAlignment="Bottom" Width="75" FontFamily="Webdings" Margin="296,0,146,20" Background="Crimson" Click="btnSiguiente_Click"/>
            <Image x:Name="imgMostrar" Height="232" VerticalAlignment="Top" Margin="50,0"/>
    </Grid>
</Window>
