<Window x:Class="_04_20ComandosClose.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.CommandBindings>
        <CommandBinding Command="Close" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed"/>
    </Window.CommandBindings>
    <Grid>
        <Button x:Name="btnCerrar" Command="Close" Content="Cerrar ventana" HorizontalAlignment="Left" Margin="150,70,0,0" VerticalAlignment="Top" Width="200" Height="100"/>
        <CheckBox x:Name="chk" Content="Permitir cerrar ventana" HorizontalAlignment="Left" Margin="173,228,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Comando close propio" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" FontWeight="Bold"/>

    </Grid>
</Window>
